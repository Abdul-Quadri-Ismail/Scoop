<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/chip_background_color</item>

        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>
    <style name="WebViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/finestGray20</item>
        <item name="colorAccent">@color/scoop_pink_500</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
</resources>